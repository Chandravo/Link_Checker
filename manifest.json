{
  "manifest_version": 3,
  "name": "link_checker",
  "version": "1.0.0",
  "description": "check for malicious links",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  } 
}